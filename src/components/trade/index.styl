.trade
  height: 100%
  margin: 0 auto
  display: grid
  grid-template-columns: 380px 1fr 380px
  grid-template-rows: 1fr

/* .trade .board */

.board
  grid-column: 2
  grid-row: 1
  display: grid
  grid-template-columns: 1fr 1fr
  grid-template-rows: 30px auto

.board span
  display: inline-block
  font-size: 13px

.board-header
  grid-column: 1 / 3
  grid-row: 1
  line-height: 30px
  vertical-align: middle
  text-align: center
  padding: 0 20px

.board-header span
  display: inline-block
  margin-right: 20px
  line-height: 30px
  vertical-align: middle

.board-header .grouped-size
  width: 50px
  margin: 0
  text-align: center

.board-header .plus
  margin-right: 20px
  background: transparent
  color: rgba(232, 232, 232, 1)
  border: none

.board-header .minus
  background: transparent
  color: rgba(232, 232, 232, 1)
  border: none

.board-header .spread
  width: 80px
  margin: 0
  text-align: center

.asks, .bids
  font-family: 'Fira Code', 'Courier New', Courier, monospace, sans-serif
  height: calc(100vh - 90px)
  padding: 0 12px
  overflow: scroll

.asks
  grid-column: 1
  grid-row: 2
  text-align: right
  color: rgba(247, 105, 77, 1)

.bids
  grid-column: 2
  grid-row: 2
  color: rgba(237, 169, 9, 1)

.asks span
  margin-left: 20px

.bids span
  margin-right: 20px

.ask, .bid
  position: relative
  width: 100%

.bar
  position: absolute
  top: 0
  bottom: 0

.asks .bar
  background: rgba(247, 105, 77, .25)
  right: 0

.bids .bar
  background: rgba(237, 169, 9, .25)
  left: 0

.my-order
  color: rgba(232, 232, 232, 1)

/* .trade .order */

.order
  grid-column: 3
  grid-row: 1
  padding: 32px

.order .sub-title
  margin-top: 0
  font-size: 14px
  font-weight: 400

#size-input, #price-input
  display: block
  width: 290px
  height: 32px
  margin: 20px 0
  text-align: center
  background: rgba(27, 31, 39, .4)
  color: rgba(233, 233, 233, 1)
  font-size: 16px
  border: none
  border-radius: 4px

.order-buttons
  width: 316px
  margin: 0

.order-buttons button
  height: 32px
  width: 136px
  font-size: 14px
  color: rgba(232, 232, 232, 1)
  border: none
  border-radius: 4px

.order-buttons button:disabled
  color: rgba(232, 232, 232, .4)
  cursor: not-allowed

.order-buttons .sell-button
  margin-right: 20px
  background: rgba(247, 105, 77, 1)

.order-buttons .sell-button:hover
  background: rgba(247, 105, 77, .8)

.order-buttons .buy-button
  background: rgba(237, 169, 9, 1)

.order-buttons .buy-button:hover
  background: rgba(237, 169, 9, .8)

.order-buttons .clear-button
  margin-right: 20px
  color: rgba(44, 57, 64, 1)
  background: rgba(232, 232, 232, 1)

.order-buttons .clear-order-button
  color: rgba(44, 57, 64, 1)
  background: rgba(232, 232, 232, 1)

.clear-button:hover, .clear-order-button:hover
  background: rgba(232, 232, 232, .8)

.order-buttons .clear-button:disabled, .order-buttons .clear-order-button:disabled
  color: rgba(44, 57, 64, .4)
